<%- model_class = @climb.class -%>
<h1 class="title"><%=t '.title', :default => @climb.name %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:style_id) %>:</strong></dt>
  <dd><%= @climb.style.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ascents) %>:</strong></dt>
  <dd><%= link_to @climb.ascents.count, climb_ascents_path(@climb) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:media_id) %>:</strong></dt>
  <dd><%= @climb.medias.count %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              climbs_path, :class => 'btn'  %>

<% if can? :edit, Climb %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_climb_path(@climb), :class => 'btn' %>
<% end %>
<% if can? :destroy, Climb %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              climb_path(@climb),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
<% end %>

</div>
