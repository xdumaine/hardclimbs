<%= simple_form_for @climb, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :style_id %>
  <%= f.input :media_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                climbs_path, :class => 'btn' %>
  </div>
<% end %>
