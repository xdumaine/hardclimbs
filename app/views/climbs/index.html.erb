<%- model_class = Climb.new.class -%>
<h1 class="title"><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:style_id) %></th>
      <th><%= model_class.human_attribute_name(:grade_id) %></th>
      <th><%= model_class.human_attribute_name(:sends) %></th>
      <th><%= model_class.human_attribute_name(:media_id) %></th>
      <% if can? :edit, Climb or can? :destroy, Climb %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @climbs.each do |climb| %>
      <tr>
        <td><%= link_to climb.name, climb_path(climb) %></td>
        <td><%= climb.style.name %></td>
        <td>Grade</td>
        <td><%= link_to climb.ascents.count, climb_ascents_path(climb) %></td>
        <td><%= climb.medias.count %></td>
        <% if can? :edit, Climb %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_climb_path(climb), :class => 'btn btn-mini' %>
        <% end %>
        <% if can? :destroy, Climb %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      climb_path(climb),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Climb %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_climb_path,
            :class => 'btn btn-primary' %>
<% end %>
