<%- model_class = Ascent.new.class -%>
<h1 class="title"><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:climb_id) %></th>
      <th><%= model_class.human_attribute_name(:climber_id) %></th>
      <th><%= model_class.human_attribute_name(:grade_id) %></th>
      <th><%= model_class.human_attribute_name(:style_id) %></th>
      <% if can? :edit, Ascent or can? :destroy, Ascent %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @ascents.each do |ascent| %>
      <tr>
        <td><%= link_to ascent.date, ascent_path(ascent) %></td>
        <td><%= link_to ascent.climb.name, climb_path(ascent.climb) %></td>
        <td><%= link_to ascent.climber.full_name, climber_path(ascent.climber) %></td>
        <td><%= ascent.grade.name %></td>
        <td><%= ascent.climb.style.name %></td>
        <% if can? :edit, Ascent %>
          <td>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_ascent_path(ascent), :class => 'btn btn-mini' %>
        <% end %>
        <% if can? :destroy, Ascent %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      ascent_path(ascent),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
            </td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if can? :create, Ascent %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ascent_path,
            :class => 'btn btn-primary' %>
<% end %>