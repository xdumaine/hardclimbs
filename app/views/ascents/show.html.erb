<%- model_class = @ascent.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:climb_id) %>:</strong></dt>
  <dd><%= @ascent.climb.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:climber_id) %>:</strong></dt>
  <dd><%= @ascent.climber.full_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:grade_id) %>:</strong></dt>
  <dd><%= @ascent.grade.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @ascent.date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              ascents_path, :class => 'btn'  %>
<% if can? :edit, Ascent %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_ascent_path(@ascent), :class => 'btn' %>
<% end %>
<% if can? :destroy, Ascent %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              ascent_path(@ascent),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
<% end %>

</div>
