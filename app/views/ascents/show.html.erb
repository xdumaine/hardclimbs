<%= render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder, :separator => ">" %>
<%- model_class = @ascent.class -%>

<%= render 'ascents/ascent_detail', :ascent => @ascent %>

<% if can? :edit, Ascent or can? :destroy, Ascent %>
	<div class="form-actions">
	<% if can? :edit, Ascent %>
	  <%= link_to t('.edit', :default => t("helpers.links.edit")),
	              edit_ascent_path(@ascent), :class => 'btn' %>
	<% end %>
	<% if can? :destroy, Ascent %>
	  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	              ascent_path(@ascent),
	              :method => 'delete',
	              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
	              :class => 'btn btn-danger' %>
	<% end %>
	<% if can? :create, Media %>
		<%= link_to "Add Media", new_ascent_media_path(@ascent), :class => 'btn' %>
	<% end %>
	</div>
<% end %>