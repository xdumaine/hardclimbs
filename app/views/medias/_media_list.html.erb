<%- model_class = medias.first.class -%>
<div id="media-list">
	<h1 class="title"><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
	<table class="table table-striped" id="medias">
	  <thead>
	    <tr>
	      <th><%= sortable "id", model_class.human_attribute_name(:id) %></th>
	      <th><%= sortable "url",model_class.human_attribute_name(:url) %></th>
	      <th><%= sortable "description",model_class.human_attribute_name(:description) %></th>
	      <th><%= sortable "media_type_id",model_class.human_attribute_name(:media_types_id) %></th>
	      <th><%= sortable "created_at",model_class.human_attribute_name(:created_at) %></th>
	      <% if can? :edit, Media or can? :destroy, Media %>
	        <th><%=t '.actions', :default => t("helpers.actions") %></th>
	      <% end %>
	    </tr>
	  </thead>
	  <tbody>
	    <% @medias.each do |media| %>
	      <tr>
	        <td><%= link_to media.id, media_path(media) %></td>
	        <td><%= link_to truncate(media.url, length: 30), media.url, {rel: "tooltip", title: media.url} %></td>
	        <td><%= media.description %></td>
	        <td><%= media.media_type.name %></td>
	        <td><%=l media.created_at.to_date %></td>
	        <% if can? :edit, Media %>
	          <td>
	            <%= link_to t('.edit', :default => t("helpers.links.edit")),
	                      edit_media_path(media), :class => 'btn btn-mini' %>
	        <% end %>
	        <% if can? :destroy, Media %>
	            <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	                      media_path(media),
	                      :method => :delete,
	                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
	                      :class => 'btn btn-mini btn-danger' %>
	            </td>
	          <% end %>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>