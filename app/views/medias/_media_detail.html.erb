<div class="row">
    <div class="span2">
        <p class="lead pull-right hidden-phone"><%= media.media_type.name %>:</p>
    </div>
    <div class="span10">
		<% if media.media_type.id == 2 %>
		<div class="embed-container">
            <%= media.url_html %>
		</div>
		<% else %>
            <%= link_to media.description, media.url, target: "_blank" %>
            <% if media.pull_quote %>
              <blockquote><%= media.pull_quote %></blockquote>
            <% end %>
		<% end%>
    </div>
</div>
